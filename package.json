{
  "name": "style-skeleton-boilerplate",
  "version": "0.0.1",
  "description": "Example style modules",
  "main": "./src/index.js",
  "scripts": {
    "start": "webpack-dashboard -- webpack-dev-server --open --config webpack.dev.js",
    "dist": "webpack --config webpack.prod.js",
    "test:ci": "NODE_ENV=test jest test",
    "test": "NODE_ENV=test jest test --notify --watch",
    "cleancoverage": "rm -rf coverage",
    "prerelease": "npm ci && npm run lint && npm run cleancoverage && npm run check-master && npm run test:ci",
    "clean": "rm -rf dist && mkdir dist",
    "predist": "npm run clean",
    "check-master": "git symbolic-ref --short HEAD | grep ^master$ > /dev/null || (echo \"Not in 'master' branch. Aborting release\"; return 1)",
    "changelog": "npm run prerelease && changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md'",
    "release:patch": "npm run changelog && npm version patch",
    "release:minor": "npm run changelog && npm version minor",
    "release:major": "npm run changelog && npm version major",
    "prepare": "npm run dist",
    "postversion": "git push --follow-tags",
    "deploy": "webpack --config webpack.deploy.js && surge ./deploy/builds/ [nombre componente eg:'style-skeleton-boilerplate'].surge.sh",
    "lint": "eslint . && npm run style-lint",
    "lint:fix": "eslint . --fix",
    "style-lint": "npx stylelint 'src/**/*.scss' -o styleLintReport.txt",
    "style-lint:fix": "npx stylelint 'src/**/*.scss' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pableco/style-skeleton-boilerplate.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/pableco/style-skeleton-boilerplate",
  "engines": {
    "node": ">=6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime-corejs2": "^7.11.2",
    "@svgr/webpack": "^5.4.0",
    "autoprefixer": "^9.8.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "css-loader": "^4.3.0",
    "cssnano": "^4.1.10",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "^7.20.6",
    "generate-changelog": "^1.7.1",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "ignore-styles": "^5.0.1",
    "jest": "^26.4.2",
    "mini-css-extract-plugin": "^0.11.2",
    "node-sass": "^4.14.1",
    "postcss-loader": "^4.0.2",
    "postcss-preset-env": "^6.7.0",
    "postcss-smart-import": "^0.7.6",
    "react": "^16.13.1",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "sass-lint": "^1.13.1",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.7.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "surge": "^0.21.6",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dashboard": "^3.2.1",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.4",
    "webpack-visualizer-plugin": "^0.1.10"
  },
  "dependencies": {
    "react": "16.x",
    "react-dom": "16.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test:ci"
    }
  }
}
